<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" tools:ignore="ExtraText">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textStyle="bold"
                android:textSize="25sp"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceListItem"/>
        <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="#696969"
                android:textAppearance="?attr/textAppearanceListItem"/>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_delete"
            app:rippleColor="@android:color/darker_gray"
            app:backgroundTint="@android:color/darker_gray"
            android:id="@+id/deleteButton" android:layout_gravity="right|center_vertical" android:focusable="true"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
